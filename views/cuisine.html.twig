<html>
    <head>
        <title>Cuisine List</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class='container'>
            <h1>{{ cuisine.getName }}</h1>

            {% if restaurants is not empty %}
                <p>Here are your restaurants:</p>
                <ul>
                    {% for restaurant in restaurants %}
                        <li>{{ restaurant.getName }} {{ restaurant.getRating }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            <h4>Add a restaurant</h4>

            <form action='/restaurants' method='post' class="form-inline">
                <div class='form-group'>

                    <input id='cuisine_id' name='cuisine_id' type='hidden' value='{{ cuisine.getId }}'>
                    <label for='name'>Restaurant Name</label>
                    <input id='name' name='name' class='form-control' type='text'>
                </div>

                    <label for='rating'>Restaurant Rating:</label>
                    <input id='rating' name='rating' type='number'>

                <button type='submit' class='btn btn-info'>Add restaurant</button>
            </form>

            <form action='/delete_restaurants' method='post'>
                <button type='submit' class='btn btn-danger'>Clear restaurants</button>
            </form>

            <p><a href="/cuisines/{{ cuisine.getId }}/edit">Edit this restaurant</a></p>

            <p><a href='/'>Home</a></p>
        </div>
    </body>
</html>
